            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StaffListActivity"
            android:label="@string/title_activity_staff_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProjectsActivity"
            android:label="@string/title_activity_projects"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddProjectActivity"
            android:label="@string/title_activity_add_project"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddStaffActivity"
            android:label="@string/title_activity_add_staff"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>