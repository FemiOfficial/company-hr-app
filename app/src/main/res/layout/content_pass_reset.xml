<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alayesanmifemi.companyapp.PassResetActivity"
    tools:showIn="@layout/activity_pass_reset"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#fbd6f7"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/text_new_pass"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#fbd6f7"
            android:hint="Enter New Password"
            android:password="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/text_confirm_new_pass"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#fbd6f7"
            android:hint="Confirm New Password"
            android:password="true"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/textView"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textSize="20dp"
            android:background="#c6ea37"
            android:textAllCaps="false"
            android:text="Submit" />




    </LinearLayout>


</RelativeLayout>

