<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alayesanmifemi.companyapp.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#fbd6f7"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/text_regNo_login"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#fbd6f7"
            android:hint="Company Reg No"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/text_password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#fbd6f7"
            android:hint="Password"
            android:password="true"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/textView"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textSize="20dp"
            android:background="#c6ea37"
            android:textAllCaps="false"
            android:text="Sign In" />

        <TextView
            android:id="@+id/text_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="Sign up here"/>
        <TextView
            android:id="@+id/text_createdBY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="Created By Hephzibah"/>

    </LinearLayout>


</RelativeLayout>
